{
  "openapi": "3.0.0",
  "info": {
    "title": "Vinyl Collection API",
    "description": "API for managing vinyl records with Discogs and Spotify integration",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8787",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Health check endpoint",
        "description": "Simple endpoint to verify if the server is running",
        "responses": {
          "200": {
            "description": "Server is running",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Honc! ðŸª¿"
                }
              }
            }
          }
        }
      }
    },
    "/api/vinyl": {
      "post": {
        "summary": "Add a new vinyl record",
        "description": "Add a new vinyl record to the collection using either barcode or manual entry",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "oneOf": [
                  {
                    "$ref": "#/components/schemas/BarcodeVinyl"
                  },
                  {
                    "$ref": "#/components/schemas/ManualEntryVinyl"
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Vinyl record successfully added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VinylResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BarcodeVinyl": {
        "type": "object",
        "required": [
          "barcode",
          "owner"
        ],
        "properties": {
          "barcode": {
            "type": "string",
            "minLength": 1
          },
          "artist": {
            "type": "string"
          },
          "release_title": {
            "type": "string"
          },
          "owner": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "ManualEntryVinyl": {
        "type": "object",
        "required": [
          "artist",
          "release_title",
          "owner"
        ],
        "properties": {
          "barcode": {
            "type": "string"
          },
          "artist": {
            "type": "string",
            "minLength": 1
          },
          "release_title": {
            "type": "string",
            "minLength": 1
          },
          "owner": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "VinylResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "barcode": {
            "type": "string"
          },
          "artist": {
            "type": "string"
          },
          "release_title": {
            "type": "string"
          },
          "owner": {
            "type": "string"
          },
          "spotify_data": {
            "type": "object",
            "properties": {
              "tracks": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Track"
                }
              },
              "audio_features": {
                "type": "object",
                "additionalProperties": true
              }
            }
          },
          "discogs_data": {
            "type": "object",
            "additionalProperties": true
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Track": {
        "type": "object",
        "properties": {
          "artists": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                }
              }
            }
          },
          "name": {
            "type": "string"
          }
        }
      }
    }
  }
}
